<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- DB연결 정보가 담겨있는 파일 (db.properties) 연결하는 태그 
	db.properties에는 주석이나 띄어쓰기 없이 작성되어야 함-->
	<properties resource="com/smhrd/database/db.properties"/>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/smhrd/database/UserMapper.xml"/>
		<mapper resource="com/smhrd/database/ExpertMapper.xml"/>
		<mapper resource="com/smhrd/database/MypageMapper.xml"/>
	</mappers>
</configuration>